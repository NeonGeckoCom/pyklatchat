FROM python:3

ADD [^(utils|config.py)]* /chat_client/
WORKDIR .
RUN apt-get update \
    && apt-get install -y \
    && apt install build-essential -y \
    && pip install --upgrade pip  \
    && pip install wheel  \
    && pip install --no-cache-dir -r ./chat_client/requirements.txt

ENV CHATCLIENT_CONFIG="chat_client/client_config.json"
ENV PYTHONPATH "${PYTHONPATH}:/chat_client"

CMD python -m chat_client
