FROM python:3.8-slim-buster

COPY . /app/chat_client/
WORKDIR /app
RUN apt-get update \
    && apt-get install -y \
    && apt install build-essential -y \
    && pip install --upgrade pip  \
    && pip install wheel  \
    && pip install --no-cache-dir -r ./chat_client/requirements.txt

ENV CHATCLIENT_CONFIG chat_client/client_config.json
ENV PYTHONPATH /app

CMD python3 -m chat_client
